@model IEnumerable<Popis.Models.Student>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<ol class="breadcrumb">

    <li class="active">
        <a asp-action="Create">
            @Html.ActionLink("Unesi novog studenta", "Create", new { /* id=item.PrimaryKey */ })
        </a>
    </li>
</ol>

<section class="content-header">
    <h1>
        Studenti
    </h1>
    <ol class="breadcrumb">

        <li class="active">Lista studenata</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Index studenata</h3>
                </div>

                <div class="box-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BROJ_ECTS)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DATUM_RODENJA)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.JMBAG)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IME)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PREZIME)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.OIB)
                                </th>



                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BROJ_ECTS)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DATUM_RODENJA)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.JMBAG)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IME)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PREZIME)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OIB)
                                    </td>


                                    <td>
                                        @Html.ActionLink("Uredi", "Edit", new { id = item.ID }) |
                                        @Html.ActionLink("Detalji", "Details", new { id = item.ID }) |
                                        @Html.ActionLink("Obriši", "Delete", new { id = item.ID })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>

        </div>

    </div>

</section>

<script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>